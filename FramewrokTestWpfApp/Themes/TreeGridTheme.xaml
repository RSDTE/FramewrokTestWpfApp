<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:FramewrokTestWpfApp.Controls">

    <Style TargetType="{x:Type local:TreeGrid}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TreeGrid">
                    <Grid>
                        <DataGrid ItemsSource="{TemplateBinding ItemsSource}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>